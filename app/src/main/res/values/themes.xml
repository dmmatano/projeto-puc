<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyFuelCalculatorBr" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_yellow</item>
        <item name="colorPrimaryContainer">@color/main_yellow_light</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnPrimaryContainer">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_yellow</item>
        <item name="colorSecondaryVariant">@color/main_yellow</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/main_gray</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!-- Customize your theme here. -->


    </style>

    <style name="Theme.MyFuelCalculatorBr.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowSplashScreenBackground">#ffffff</item>
        <item name="android:statusBarColor">#ffffff</item>
    </style>

    <style name="MyActionBar" parent="">
        <item name="android:background">@color/main_gray</item>
    </style>

    <style name="Theme.BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Theme.BottomSheetDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Theme.BottomSheetStyle</item>
    </style>

</resources>